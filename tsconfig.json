{
  "compilerOptions": {
    "target": "es2023",
    "module": "ESNext",
    "declaration": true,
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "paths": {
      "@/*": ["./src/*"],
    },
    "types": ["vitest/globals"],
  },
  "include": ["src"]
}